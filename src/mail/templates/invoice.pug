doctype html
html
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    title  Order confirmation
    meta(name="robots", content="noindex,nofollow")
    meta(name="viewport", content="width=device-width; initial-scale=1.0;")
    style(type="text/css").
      @import url(https://fonts.googleapis.com/css?family=Open+Sans:400,700);
      body { margin: 0; padding: 0; background: #e1e1e1; }
      div, p, a, li, td { -webkit-text-size-adjust: none; }
      .ReadMsgBody { width: 100%; background-color: #ffffff; }
      .ExternalClass { width: 100%; background-color: #ffffff; }
      body { width: 100%; height: 100%; background-color: #e1e1e1; margin: 0; padding: 0; -webkit-font-smoothing: antialiased; }
      html { width: 100%; }
      p { padding: 0 !important; margin-top: 0 !important; margin-right: 0 !important; margin-bottom: 0 !important; margin-left: 0 !important; }
      .visibleMobile { display: none; }
      .hiddenMobile { display: block; }

      @media only screen and (max-width: 600px) {
      body { width: auto !important; }
      table[class=fullTable] { width: 96% !important; clear: both; }
      table[class=fullPadding] { width: 85% !important; clear: both; }
      table[class=col] { width: 45% !important; }
      .erase { display: none; }
      }

      @media only screen and (max-width: 420px) {
      table[class=fullTable] { width: 100% !important; clear: both; }
      table[class=fullPadding] { width: 85% !important; clear: both; }
      table[class=col] { width: 100% !important; clear: both; }
      table[class=col] td { text-align: left !important; }
      .erase { display: none; font-size: 0; max-height: 0; line-height: 0; padding: 0; }
      .visibleMobile { display: block !important; }
      .hiddenMobile { display: none !important; }
      }

  body
    // Header
    table.fullTable(width="100%", border="0", cellpadding="0", cellspacing="0", align="center", bgcolor="#e1e1e1")
      tr
        td(height="20")
      tr
        td
          table.fullTable(width="600", border="0", cellpadding="0", cellspacing="0", align="center", bgcolor="#ffffff", style="border-radius: 10px 10px 0 0;")
            tr.hiddenMobile
              td(height="40")
            tr.visibleMobile
              td(height="30")
            tr
              td
                table.fullPadding(width="480", border="0", cellpadding="0", cellspacing="0", align="center")
                  tbody
                    tr
                      td
                        table.col(width="220", border="0", cellpadding="0", cellspacing="0", align="left")
                          tbody
                            tr
                              td(align="left")
                                img(src="http://www.supah.it/dribbble/017/logo.png", width="32", height="32", alt="logo", border="0")
                            tr.hiddenMobile
                              td(height="40")
                            tr.visibleMobile
                              td(height="20")
                            tr
                              td(style="font-size: 12px; color: #5b5b5b; font-family: 'Open Sans', sans-serif; line-height: 18px; vertical-align: top; text-align: left;")
                                | Hello, #{company}.
                                br
                                | Thank you for shopping from our store and for your order.
                        table.col(width="220", border="0", cellpadding="0", cellspacing="0", align="right")
                          tbody
                            tr.visibleMobile
                              td(height="20")
                            tr
                              td(height="5")
                            tr
                              td(style="font-size: 21px; color: #ff0000; letter-spacing: -1px; font-family: 'Open Sans', sans-serif; line-height: 1; vertical-align: top; text-align: right;")
                                | Invoice
                            tr
                            tr.hiddenMobile
                              td(height="50")
                            tr.visibleMobile
                              td(height="20")
                            tr
                              td(style="font-size: 12px; color: #5b5b5b; font-family: 'Open Sans', sans-serif; line-height: 18px; vertical-align: top; text-align: right;")
                                | Invoice number: #{invoice_number}
                                br
                                | Create date: #{create_date}
                                br
                                | Due date: #{due_date}

    // Order Details
    table.fullTable(width="100%", border="0", cellpadding="0", cellspacing="0", align="center", bgcolor="#e1e1e1")
      tbody
        tr
          td
            table.fullTable(width="600", border="0", cellpadding="0", cellspacing="0", align="center", bgcolor="#ffffff")
              tbody
                tr
                tr.hiddenMobile
                  td(height="60")
                tr.visibleMobile
                  td(height="40")
                tr
                  td
                    table.fullPadding(width="480", border="0", cellpadding="0", cellspacing="0", align="center")
                      tbody
                        tr
                          th(style="font-size: 12px; font-family: 'Open Sans', sans-serif; color: #5b5b5b; font-weight: normal; line-height: 1; vertical-align: top; padding: 0 10px 7px 0;", width="52%", align="left")
                            | Item
                          th(style="font-size: 12px; font-family: 'Open Sans', sans-serif; color: #5b5b5b; font-weight: normal; line-height: 1; vertical-align: top; padding: 0 10px 7px 0;", width="52%", align="left")
                            | Description
                          th(style="font-size: 12px; font-family: 'Open Sans', sans-serif; color: #5b5b5b; font-weight: normal; line-height: 1; vertical-align: top; padding: 0 0 7px;", align="center")
                            | Quantity
                          th(style="font-size: 12px; font-family: 'Open Sans', sans-serif; color: #1e2b33; font-weight: normal; line-height: 1; vertical-align: top; padding: 0 0 7px;", align="right")
                            | Unit Price
                        tr
                          td(height="1", style="background: #bebebe;", colspan="4")
                        tr
                          td(height="10", colspan="4")
                        each item in items
                          tr
                            td.article(style="font-size: 12px; font-family: 'Open Sans', sans-serif; color: #ff0000;  line-height: 18px;  vertical-align: top; padding:10px 0;")
                              | #{item.name}
                       
                            td.article(style="font-size: 12px; font-family: 'Open Sans', sans-serif; color: #ff0000;  line-height: 18px;  vertical-align: top; padding:10px 0;")
                              | #{item.description}
                       
                            td(style="font-size: 12px; font-family: 'Open Sans', sans-serif; color: #646a6e;  line-height: 18px;  vertical-align: top; padding:10px 0;", align="center")
                              | #{item.quantity}
                            td(style="font-size: 12px; font-family: 'Open Sans', sans-serif; color: #1e2b33;  line-height: 18px;  vertical-align: top; padding:10px 0;", align="right")
                              | $#{item.unit_price}
                          tr
                            td(height="1", colspan="4", style="border-bottom:1px solid #e4e4e4")

    // Total
    table.fullTable(width="100%", border="0", cellpadding="0", cellspacing="0", align="center", bgcolor="#e1e1e1")
      tbody
        tr
          td
            table.fullTable(width="600", border="0", cellpadding="0", cellspacing="0", align="center", bgcolor="#ffffff")
              tbody
                tr
                  td
                    // Table Total
                    table.fullPadding(width="480", border="0", cellpadding="0", cellspacing="0", align="center")
                      tbody
                        tr
                          td(style="font-size: 12px; font-family: 'Open Sans', sans-serif; color: #646a6e; line-height: 22px; vertical-align: top; text-align:right; ")
                            | Subtotal
                          td(style="font-size: 12px; font-family: 'Open Sans', sans-serif; color: #646a6e; line-height: 22px; vertical-align: top; text-align:right; white-space:nowrap;", width="80")
                            | $#{total_price}
                      

    // Information


    table.fullTable(width="100%", border="0", cellpadding="0", cellspacing="0", align="center", bgcolor="#e1e1e1")
      tr
        td
          table.fullTable(width="600", border="0", cellpadding="0", cellspacing="0", align="center", bgcolor="#ffffff", style="border-radius: 0 0 10px 10px;")
            tr
              td
                table.fullPadding(width="480", border="0", cellpadding="0", cellspacing="0", align="center")
                  tbody
                    tr
                    td(style="font-size: 12px; color: #5b5b5b; font-family: 'Open Sans', sans-serif; line-height: 18px; vertical-align: top; text-align: left;")
                        | Note: #{note}               
                    tr
                      td(style="font-size: 12px; color: #5b5b5b; font-family: 'Open Sans', sans-serif; line-height: 18px; vertical-align: top; text-align: left;")
                        | Have a nice day.
            tr.spacer
              td(height="50")
      tr
        td(height="20")